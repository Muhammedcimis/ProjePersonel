@using PersonelProjesiDataAccess.Models
@model PersonelDTO

@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Personel Güncelle</h2>


        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">PersonelId</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["PersonelId"]">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">İsim</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Adi">
                    <span asp-validation-for="Adi" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Soyisim</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Soyadi">
                    <span asp-validation-for="Soyadi" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Cinsiyet</label>
                <div class="col-sm-8">
                    @foreach (var item in ViewBag.Cinsiyetdata as List<string>)
                    {
                        <div class="form-group form-check-inline">
                            <input class="form-radio-input" asp-for="Cinsiyet" type="radio" value="@item" />
                            <label class="form-check-label">
                                @item
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Zimmet</label>
                <div class="col-sm-8">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsZimmet" type="checkbox">
                        <label class="form-check-label" for="flexCheckDefault">
                            Zimmet
                        </label>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Mezuniyet</label>
                <div class="col-sm-8">
                    <select asp-for="Mezuniyet" class="form-control" asp-items="new SelectList(Model.MezuniyetBilgisi)"></select>
                    <option value="">Üniversite Seçiniz</option>
                    <span asp-validation-for="Mezuniyet" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Şehir</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Sehir">
                    <span asp-validation-for="Sehir" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Departman</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Departman">
                        <option value="Pazarlama">Pazarlama</option>
                        <option value="Satın Alma">Satın Alma</option>
                        <option value="Finans ve Muhasebe">Finans ve Muhasebe</option>
                        <option value="Bilgi İşlem">Bilgi İşlem</option>
                        <option value="Yazılım">Yazılım</option>
                        <option value="İnsan Kaynakları">İnsan Kaynakları</option>
                        <option value="Diger">Diğer</option>
                    </select>
                </div>
            </div>
            @*     <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Departman</label>
            <div class="col-sm-8">
            <input class="form-control" asp-for="Departman">
            <span asp-validation-for="Departman" class="text-danger"></span>
            </div>
            </div> *@
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Doğum Tarihi</label>
                <div class="col-sm-8">
                    <input type="date" class="form-control" asp-for="DogumTarihi">
                    <span asp-validation-for="DogumTarihi" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Maaş</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Maas">
                    <span asp-validation-for="Maas" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Personel" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>
